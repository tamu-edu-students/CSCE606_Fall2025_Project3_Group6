<div class="fixed top-20 inset-x-0 flex justify-center z-50 px-4"
     aria-live="assertive" aria-atomic="true">

  <div class="w-full max-w-lg space-y-3">
    <% flash.each do |type, message| %>
      <% styles =
        case type.to_sym
        when :notice, :success
          "from-[#E8C07D]/90 to-[#B37D2A]/85 text-black border-[#E8C07D]/20 backdrop-blur"
        when :alert, :error
          "from-red-600/90 to-red-800/85 text-white border-red-500/20 backdrop-blur"
        else
          "from-[#1F2937]/85 to-[#0F172A]/80 text-white border-white/10 backdrop-blur"
        end
      %>

      <div class="relative overflow-hidden rounded-xl border bg-gradient-to-br shadow-2xl shadow-black/30 <%= styles %>"
           role="alert">
        <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.25),transparent_45%)]"></div>
        <div data-controller="flash" class="relative px-5 py-4 font-medium flex items-start gap-3">
          <div class="flex-1">
            <%= message %>
          </div>
          <button type="button"
                  class="text-base font-bold px-2 -mr-2 hover:opacity-80"
                  data-action="flash#dismiss"
                  aria-label="Dismiss alert">
            Ã—
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
