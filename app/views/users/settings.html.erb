<div class="min-h-screen bg-cinematico-black pt-24 px-6 pb-12">
  <div class="max-w-4xl mx-auto space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs text-gray-400 uppercase tracking-wide">Account</p>
        <h1 class="font-cinzel text-4xl text-cinematico-gold">Settings</h1>
        <p class="text-sm text-gray-300">Manage privacy, profile, password, and notifications.</p>
      </div>
      <%= link_to "Back to Profile", profile_path, class: "px-4 py-2 border border-gray-700 text-gray-200 text-sm rounded-lg hover:border-cinematico-gold hover:text-cinematico-gold transition" %>
    </div>

    <div class="glass p-8 space-y-6">
      <h2 class="font-cinzel text-2xl text-cinematico-gold">Privacy</h2>
      <p class="text-sm text-gray-400">Switch between a public or private account.</p>
      <%= form_with model: @user, url: settings_profile_path, method: :patch, local: true do |f| %>
        <div class="flex items-center gap-3 mb-4">
          <%= f.check_box :profile_public, class: "w-5 h-5 text-cinematico-gold bg-cinematico-dark border-cinematico-grey rounded focus:ring-cinematico-gold" %>
          <%= f.label :profile_public, "Public account", class: "text-cinematico-light" %>
        </div>
        <%= f.submit "Save Privacy", class: "px-4 py-2 bg-cinematico-gold text-cinematico-black text-sm font-semibold rounded hover:bg-opacity-90 cursor-pointer" %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="glass p-6 space-y-3">
        <h3 class="text-white font-semibold">Profile</h3>
        <p class="text-sm text-gray-400">Update username or profile details.</p>
        <%= link_to "Edit Profile", settings_profile_path, class: "inline-block px-4 py-2 bg-cinematico-gold text-cinematico-black text-sm font-semibold rounded hover:bg-opacity-90" %>
      </div>

      <div class="glass p-6 space-y-3">
        <h3 class="text-white font-semibold">Following</h3>
        <p class="text-sm text-gray-400">People you follow</p>
        <% if @following.present? %>
          <div class="divide-y divide-white/10 border border-white/10 rounded">
            <% @following.each do |u| %>
              <div class="flex items-center justify-between px-3 py-2">
                <div class="text-sm text-cinematico-light"><%= u.username %></div>
                <%= button_to "Unfollow", user_follow_path(u), method: :delete, class: "text-xs px-3 py-1 border border-cinematico-gold text-cinematico-gold rounded hover:bg-cinematico-gold hover:text-black transition" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-400">You are not following anyone yet.</p>
        <% end %>
      </div>

      <div class="glass p-6 space-y-3">
        <h3 class="text-white font-semibold">Password</h3>
        <p class="text-sm text-gray-400">Change your password securely.</p>
        <%= link_to "Change Password", edit_user_registration_path, class: "inline-block px-4 py-2 border border-gray-700 text-gray-200 text-sm rounded hover:border-cinematico-gold hover:text-cinematico-gold" %>
      </div>

      <div class="glass p-6 space-y-3">
        <div class="flex items-center justify-between">
          <h3 class="text-white font-semibold">Notifications</h3>
          <span class="text-xs text-gray-500">Email & in-app</span>
        </div>
        <p class="text-sm text-gray-400">Choose which alerts you get, including email notifications.</p>
        <%= link_to "Notification Settings", edit_notification_preferences_path, class: "inline-block px-4 py-2 bg-cinematico-gold text-cinematico-black text-sm font-semibold rounded hover:bg-opacity-90" %>
      </div>
    </div>
  </div>
</div>
