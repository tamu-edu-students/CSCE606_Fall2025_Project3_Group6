<div class="min-h-screen pt-24 px-6 bg-cinematico-black">
  <div class="max-w-2xl mx-auto bg-cinematico-dark p-8 rounded border border-gray-800">
    <h1 class="font-cinzel text-3xl text-cinematico-gold mb-8">Create New List</h1>
    <%= form_with(model: @list, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-cinematico-light mb-2" %>
        <%= f.text_field :name, class: "w-full bg-cinematico-black border border-gray-700 rounded text-white px-4 py-3" %>
      </div>
      <div>
        <%= f.label :description, class: "block text-sm font-medium text-cinematico-light mb-2" %>
        <%= f.text_area :description, rows: 3, class: "w-full bg-cinematico-black border border-gray-700 rounded text-white px-4 py-3" %>
      </div>
      <div class="flex items-center gap-2">
        <%= f.check_box :public, class: "rounded bg-cinematico-black border-gray-700 text-cinematico-gold" %>
        <%= f.label :public, "Make this list public", class: "text-cinematico-light" %>
      </div>
      <%= f.submit "Create List", class: "w-full py-3 bg-cinematico-gold text-cinematico-black font-bold rounded hover:bg-yellow-500 cursor-pointer" %>
    <% end %>
  </div>
</div>